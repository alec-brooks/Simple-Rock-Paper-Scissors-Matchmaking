{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
      "__DEV__": false,
    },
    "rules": {
      "arrow-parens": ["error", "always"],
      "comma-dangle": ["error", {"functions": "never"}],
      "no-confusing-arrow": ["error", {"allowParens": true}]
    },
}
